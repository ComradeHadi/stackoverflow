<%= render layout: 'shared/layouts/update_item_after_action', locals: { \
  item: @answer, \
  action: :create \
} do %>
  <% publish_to "/questions/#{@question.id}/answers" do %>
    $("#answers_<%= dom_id @question %>").replaceWith('<%= j render 'answers/index' %>')
  <% end %>
  $("#answer_body").val('')
<% end %>
