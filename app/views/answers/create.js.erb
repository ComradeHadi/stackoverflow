<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('#alert').html('<%= t 'answer.failure.not_created' %>')
    $('#notice').html('<%= j message %>')
  <% end %>
<% else %>
  $('#notice').html('<%= t 'answer.created' %>')
  $('#answers').html('<%= j render 'answers' %>');
  $('#answer_body').val('');
<% end %>

