<%= render layout: 'shared/layouts/update_item_after_action', locals: { \
  item: @answer, \
  action: :update \
} do %>
  $("#form_edit_<%= dom_id @answer %>").hide()
  $("#link_edit_<%= dom_id @answer %>").show()
  $("#item_<%= dom_id @answer %>").replaceWith('<%= j render 'answers/item', answer: @answer %>');
<% end %>
