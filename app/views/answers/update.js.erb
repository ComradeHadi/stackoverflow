<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('#alert').html('<%= I18n.t('answer.failure.not_updated') %>')
    $('#notice').html('<%= j message %>')
  <% end %>
<% else %>
  $('#alert').html('')
  $('#notice').html('<%= I18n.t('answer.updated') %>')
  $('#answers').html('<%= j render 'questions/answers' %>')
<% end %>

