<%
  model_name = item.model_name.element

  default_notice = t('flash.actions.destroy.notice', resource_name: model_name.capitalize)
  notice = t("#{ model_name }.notice.destroy", default: default_notice)
%>
$('#alert').empty()
$('#notice').html('<%= notice %>')
<% unless local_assigns[:published] %>
  $("#<%= dom_id item %>").remove()
<% end %>
