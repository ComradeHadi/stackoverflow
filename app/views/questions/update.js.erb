<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $('#alert').html('<%= t 'question.failure.not_updated' %>')
    $('#notice').html('<%= j message %>')
  <% end %>
<% else %>
  $('#alert').empty()
  $('#notice').html('<%= t 'question.updated' %>')
  $('#question').html('<%= j render @question %>')
<% end %>
