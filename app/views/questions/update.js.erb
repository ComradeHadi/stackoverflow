<%= render layout: 'shared/layouts/update_item_after_action', locals: { \
  item: @question, \
  action: :update \
} do %>
  $("form#for_edit_<%= dom_id @question %>").hide()
  $("a#link_edit_<%= dom_id @question %>").show()
  $("#item_<%= dom_id @question %>").replaceWith('<%= j render 'item' %>');
<% end %>
