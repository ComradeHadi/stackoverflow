= div_for question

  = render 'item', question: question

  - if can? :modify, question

    = render 'edit', question: question

    = div_for @question, :links
      = render 'shared/link_edit', item: question
      =< render 'shared/link_delete', item: question, remote: false

  = render 'votes/show', votable: question

  = render 'comments/list', container: question

  hr

  = render 'answers/list', question: question
